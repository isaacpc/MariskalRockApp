<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.Mr_rojo" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_mr_rojo</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mr_rojo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mr_rojo</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mr_rojo</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mr_rojo</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mr_rojo</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mr_rojo</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mr_rojo</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mr_rojo</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Mr_rojo.Widget</item>

    </style>

    <style name="ActionBar.Solid.Mr_rojo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_mr_rojo</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mr_rojo</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mr_rojo</item>
        <item name="progressBarStyle">@style/ProgressBar.Mr_rojo</item>
    </style>

    <style name="ActionBar.Transparent.Mr_rojo" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_mr_rojo</item>
        <item name="progressBarStyle">@style/ProgressBar.Mr_rojo</item>
    </style>
	
    <style name="PopupMenu.Mr_rojo" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mr_rojo</item>	
    </style>
	
    <style name="DropDownListView.Mr_rojo" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mr_rojo</item>
    </style>

    <style name="ActionBarTabStyle.Mr_rojo" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mr_rojo</item>
    </style>
	
    <style name="DropDownNav.Mr_rojo" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mr_rojo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mr_rojo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mr_rojo</item>
    </style>
    
    <style name="ProgressBar.Mr_rojo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mr_rojo</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mr_rojo" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mr_rojo</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mr_rojo.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mr_rojo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mr_rojo</item>
    </style>

</resources>